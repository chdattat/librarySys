<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>addbooks</servlet-name>
        <servlet-class>controller.addbooks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>controller.registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>controller.signin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update_books</servlet-name>
        <servlet-class>controller.update_books</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Payment_Details</servlet-name>
        <servlet-class>controller.Payment_Details</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addbooks</servlet-name>
        <url-pattern>/addbooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update_books</servlet-name>
        <url-pattern>/update_books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Payment_Details</servlet-name>
        <url-pattern>/Payment_Details</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
